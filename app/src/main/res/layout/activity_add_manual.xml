<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddManual">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@color/colorYellow">

            <TextView
                android:id="@+id/add"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/Add"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_below="@id/top"
            android:layout_marginTop="0dp"
            android:background="@color/colorWhiteBlack">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/titletext"
                android:background="@color/colorWhite"
                android:textStyle="bold"
                android:id="@+id/titlea"
                android:layout_marginTop="250dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/titlea"
                android:text="Current Location:"
                android:layout_marginTop="20dp"
                android:id="@+id/cu"
                android:layout_marginStart="20dp"
                android:textColor="@color/colorWhite"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/cu"
                android:background="@color/colorWhite"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:id="@+id/location"
                android:layout_marginEnd="20dp"
                android:hint="@string/Address"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:id="@+id/save"
                android:layout_below="@id/location"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/save"
                android:textStyle="bold"
                android:textColor="@color/colorYellow"
                android:textSize="30dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/middle"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="-2dp"
            android:background="@drawable/plusa">

            <ImageView
                android:id="@+id/addlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/plus" />


        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>