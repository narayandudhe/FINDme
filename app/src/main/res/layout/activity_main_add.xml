<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainAdd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@color/colorYellow">

            <TextView
                android:id="@+id/add"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/Add"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/cart"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="179dp"
                android:layout_marginEnd="20dp"

                android:src="@drawable/cart" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_below="@id/top"
            android:layout_marginTop="0dp"
            android:background="@color/colorWhiteBlack">

            <TextView
                android:id="@+id/sel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="70dp"
                android:text="Selet My Location:"
                android:textColor="@color/colorWhite"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/location"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/sel"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/loc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sel"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:id="@+id/manual"
                android:layout_toRightOf="@id/location"
                android:text="Use Current Location"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="or"
                android:textColor="@color/colorWhite"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/map"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/or"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/map" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/or"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/map"
                android:text="Set Location Manually"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/middle"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="-2dp"
            android:background="@drawable/plusa">

            <ImageView
                android:id="@+id/addlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/plus" />


        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>